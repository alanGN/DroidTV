<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/tvShowCoverIv"
        android:layout_width="match_parent"
        android:layout_height="180dp" />

    <TextView
        android:textColor="@color/colorWhite"
        android:drawableRight="@drawable/ic_star_black_24dp"
        android:layout_gravity="top|right"
        android:id="@+id/tvShowAverageTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="5dp"
        android:gravity="bottom"
        android:layout_margin="@dimen/margin_general_between_items"
        android:text="AVERAGE:" />
    <View
        android:background="@color/colorDarkTranslucent"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>
    <TextView
        android:textColor="@color/colorWhite"
        android:layout_gravity="bottom"
        android:id="@+id/tvShowTitleTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_general_between_items"
        android:textSize="24dp"
        android:textStyle="bold"
        android:text="TITLE:" />
</FrameLayout>